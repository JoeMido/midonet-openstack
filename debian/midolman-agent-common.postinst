#!/bin/sh
# postinst script for midolman-agent-common
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule

CONFFILE=/etc/midolman-agent.conf

create_config() {
    cat <<EOF > $CONFFILE
# Midolman Agent configuration file
#
# Don't modify this configuration file by hand.
# Run 'dpkg-reconfigure midolman-agent-common' instead.

EOF
    echo "[server]" >> $CONFFILE
    db_get midolman-agent-common/server-host
    echo "host: $RET" >> $CONFFILE
    db_get midolman-agent-common/server-port
    echo "port: $RET" >> $CONFFILE

    echo >> $CONFFILE
    echo "[midolman]" >> $CONFFILE
    db_get midolman-agent-common/midolman-conf
    echo "conf: $RET" >> $CONFFILE

    echo >> $CONFFILE
    echo "[openvswitch]" >> $CONFFILE
    db_get midolman-agent-common/openvswitch-bridge_prefix
    echo "bridge_prefix: $RET" >> $CONFFILE

    echo >> $CONFFILE
    db_get midolman-agent-common/openvswitch-controller
    echo "controller: $RET" >> $CONFFILE

    echo >> $CONFFILE
    echo "[interface]" >> $CONFFILE
    db_get midolman-agent-common/interface-mtu
    echo "mtu: $RET" >> $CONFFILE

}

case "$1" in
    configure)
        create_config
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
